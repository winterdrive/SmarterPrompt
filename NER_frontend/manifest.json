{
  "manifest_version": 3,
  "name": "Text Selection Popup",
  "version": "1.0",
  "description": "Shows a popup when text is selected.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
